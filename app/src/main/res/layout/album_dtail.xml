<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="album"
            type="com.example.movieguideapp.ui.vo.AlbumItem" />

        <variable
            name="viewModel"
            type="com.example.movieguideapp.ui.viewmodel.AlbumDetailViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/ab_item_name1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:typeface="monospace"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:text="@{album.itemName}"
            />

        <ImageView
            android:id="@+id/ab_image1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background"
            app:loadImage="@{album.imageUrl}"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{album.itemName}"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="play"
            android:onClick="@{(view)->viewModel.play(context,view)}"
            />
    </LinearLayout>
</layout>
